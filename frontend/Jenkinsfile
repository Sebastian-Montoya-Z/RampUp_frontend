def front_image
pipeline {
    agent any
    environment {
        ANSIBLE_PLAYBOOK_PATH = '/etc/ansible/playbooks/frontend.yml'
        ANSIBLE_INVENTORY_PATH = '/etc/ansible/aws_ec2.yml'
    }

    stages {
        stage('Build image') {
            steps{
                script {
                    sh 'sudo docker build . -t web --no-cache'
                }
            }
        }

        stage('push image') {
            steps{
                script {
                    sh 'sudo docker run --name web -d --network mynetwork -p 8080:8080 -e ZIPKIN_URL=http://internal-SMZ-lb-internal-945498851.us-east-1.elb.amazonaws.com:9411/api/v2/spans -e PORT=8080 -e AUTH_API_ADDRESS=http://internal-SMZ-lb-internal-945498851.us-east-1.elb.amazonaws.com:8081 -e TODOS_API_ADDRESS=http://internal-SMZ-lb-internal-945498851.us-east-1.elb.amazonaws.com:8082 web'
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: "${env.ANSIBLE_PLAYBOOK_PATH}",
                    inventory: "${env.ANSIBLE_INVENTORY_PATH}",
                    extras: '-e ilb=internal-SMZ-lb-internal-945498851.us-east-1.elb.amazonaws.com'
                )
            }
        }
    }
}